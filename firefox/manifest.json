{
  "manifest_version": 2,
  "name": "DA Moderator",
  "version": "1.4.1",
  "description": "Звуковые оповещения, выбор кнопки для подтверждения донатов, автоматическое подтверждение донатов",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.donationalerts.com/widget/lastdonations*"],
      "js": ["content.js"],
      "css": ["modal.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "alarms",
    "https://raw.githubusercontent.com/*",
    "https://cdn.jsdelivr.net/*"
  ],
  "browser_action": {
    "default_icon": "icon48.png",
    "default_title": "DA Moderator",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{876fc4ab-d8ad-4efa-bda7-86d463538ee3}",
      "update_url": "https://raw.githubusercontent.com/phleesty/donation-alerts-moderator/main/updates.json",
      "strict_min_version": "78.0"
    }
  }
}